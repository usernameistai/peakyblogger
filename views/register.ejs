<% include partials/header %>

<main style="background-color: #dad2c5;">
    <header>
        <div class="container" style="margin: auto;">
            <div class="jumbotron" id="jumbotron" style="box-shadow: 0 2px 4px 0px rgba(68, 83 , 59, 0.3);">
                <div class="container">
                    <h1 class="pageone" style="margin-top: 1rem; padding-bottom: 0; color: #41533b;">
                        <div style="text-shadow: 2px 4px 3px rgba(0,0,0,0.3);">
                            <div><i class="fas fa-tree fa-2x"></i><i class="fas fa-utensils fa-2x"></i><p>&ensp; Please register sir</p></div>
                        </div>
                    </h1>
                    <p style=" text-align: center; color: #41533b;">Although don't worry about the admin code unless you're Mr B..</p>
                </div>
            </div>
        </div>
    </header>

    <div class="container" style="margin-bottom: 20rem;">
        <h2 style="text-align: center;">Sign Up</h2>
        <div style="width: 40%; margin: 25px auto;">
                <form action="/register" method="post">
                    <div class="form-group"> <!-- Gives space around parts of the form -->
                        <input class="form-control" type="text" name="username" placeholder="username" id="">
                    </div>
                    <div class="form-group"> <!-- Gives space around parts of the form -->
                        <input class="form-control" type="password" name="password" placeholder="password" id="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="admincode" placeholder="admin code" id="">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-block">Sign Up</button>
                    </div>
                </form>
        </div>
    </div>
    <br><br><br><br><br><br>
</main>

<% include partials/footer %>